<div class="container text-center">
  <h3>Lets Chat</h3>
  <i class="fas fa-comments chaticon"></i>
</div>
<div class="chatbox">
  <div class="chatsection">
    <div class="chat-container">
      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Avatar" style="width:100%;">
      <p>Hello. How are you today?</p>
      <span class="time-right">11:00</span>
    </div>
  </div>
  <form class="mt-3">
    <div class="form-group row">
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputPassword" placeholder="Place your message">
      </div>
      <button type="submit" class="btn btn-success col-sm-2 col-form-label">
      <i class="fas fa-check-circle mr-1"></i>send</button>
    </div>
  </form>
</div>